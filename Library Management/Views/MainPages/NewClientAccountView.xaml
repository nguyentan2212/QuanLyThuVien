<Page x:Class="Library_Management.Views.MainPages.NewClientAccountView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library_Management.Views.MainPages"
      xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes" 
      xmlns:sc="clr-namespace:Library_Management.Resources.Sercurity"
      Background="{DynamicResource MaterialDesignBackground}"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="NewClientAccountView">
    <Page.Resources>
        <sc:HasErrorConverter x:Key="HasErrorConverter"/>
        <sc:BindingProxy x:Key="proxy" Data="{Binding}"/>
    </Page.Resources>
    <md:DialogHost IsOpen="{Binding IsDialogOpen, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                   Background="Transparent"
                   DialogContent="{Binding DialogContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>
            
            <md:Card Grid.Column="0" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Image Grid.Row="0" Source="{Binding Client.HINHANH}" Margin="10"/>
                    <Button Grid.Row="1" x:Name="ChangeAvartar" 
                        Margin="10" HorizontalAlignment="Center"
                            Style="{StaticResource MaterialDesignRaisedAccentButton}"
                        Content="Thay ảnh"/>
                </Grid>
            </md:Card>
            <md:Card Grid.Column="1" Margin="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <md:PackIcon Grid.Row="0" Grid.Column="0" 
                                 Width="30" Height="30" Margin="5" 
                                 VerticalAlignment="Center"
                                 Kind="User"/>
                    <md:PackIcon Grid.Row="1" Grid.Column="0" 
                                 Width="30" Height="30" Margin="5" 
                                 VerticalAlignment="Center"
                                 Kind="Category"/>
                    <md:PackIcon Grid.Row="2" Grid.Column="0" 
                                 Width="30" Height="30" Margin="5" 
                                 VerticalAlignment="Center"
                                 Kind="BirthdayCake"/>
                    <md:PackIcon Grid.Row="3" Grid.Column="0" 
                                 Width="30" Height="30" Margin="5" 
                                 VerticalAlignment="Center"
                                 Kind="Email"/>
                    <md:PackIcon Grid.Row="4" Grid.Column="0" 
                                 Width="30" Height="30" Margin="5" 
                                 VerticalAlignment="Center"
                                 Kind="AccountLocation"/>
                    <TextBox Grid.Row="0" Grid.Column="1" x:Name="txbClientName"
                             VerticalAlignment="Center" FontSize="15"
                             md:HintAssist.Hint="Họ và tên"
                             md:ValidationAssist.OnlyShowOnFocus="True"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        <TextBox.Text>
                            <Binding Path="Client.HOTEN" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <sc:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <ComboBox Grid.Row="1" Grid.Column="1" x:Name="cbbClientType"
                              VerticalAlignment="Center" FontSize="15"
                              md:HintAssist.Hint="Loại tài khoản"
                              md:ValidationAssist.OnlyShowOnFocus="True"
                              IsEditable="True"
                              ItemsSource="{Binding ClientTypeList, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                              DisplayMemberPath="LOAIDOCGIA1"      
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}">
                        <ComboBox.SelectedItem>
                            <Binding Path="ClienType" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <sc:SelectedItemValidationRule ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </ComboBox.SelectedItem>
                    </ComboBox>
                    <DatePicker Grid.Row="2" Grid.Column="1" x:Name="dpkClientBirthday"
                                VerticalAlignment="Center" FontSize="15"
                                md:HintAssist.Hint="Ngày sinh"
                                md:ValidationAssist.OnlyShowOnFocus="True"
                                Style="{StaticResource MaterialDesignFloatingHintDatePicker}">
                        <DatePicker.SelectedDate>
                            <Binding Path="Client.NGSINH" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <sc:DateValidationRule ValidatesOnTargetUpdated="True" IsAgeValidation="True">
                                        <sc:DateValidationRule.Wrapper>
                                            <sc:Wrapper MinAge="{Binding Data.ClientMinAge, Source={StaticResource proxy}}"
                                                        MaxAge="{Binding Data.ClientMaxAge, Source={StaticResource proxy}}"/>
                                        </sc:DateValidationRule.Wrapper>
                                    </sc:DateValidationRule>
                                </Binding.ValidationRules>
                            </Binding>
                        </DatePicker.SelectedDate>
                    </DatePicker>
                    <TextBox Grid.Row="3" Grid.Column="1" x:Name="txbClientEmail"
                             VerticalAlignment="Center" FontSize="15"
                             md:HintAssist.Hint="Email"
                             md:ValidationAssist.OnlyShowOnFocus="True"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        <TextBox.Text>
                            <Binding Path="Client.EMAIL" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <sc:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <TextBox Grid.Row="4" Grid.Column="1" x:Name="txbClientAddress"
                             VerticalAlignment="Center" FontSize="15"
                             md:HintAssist.Hint="Địa chỉ"
                             md:ValidationAssist.OnlyShowOnFocus="True"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}">
                        <TextBox.Text>
                            <Binding Path="Client.DCHI" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged">
                                <Binding.ValidationRules>
                                    <sc:NotEmptyValidationRule ValidatesOnTargetUpdated="True"/>
                                </Binding.ValidationRules>
                            </Binding>
                        </TextBox.Text>
                    </TextBox>
                    <Button Grid.Row="1" Grid.Column="2" x:Name="OpenEditClientType" Margin="5"
                            VerticalAlignment="Center" HorizontalAlignment="Center"
                            Background="{DynamicResource MahApps.Brushes.Accent}"
                            Style="{StaticResource MaterialDesignIconForegroundButton}">
                        <Button.Content>
                            <md:PackIcon Width="30" Height="30" Kind="Edit"/>
                        </Button.Content>
                    </Button>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="5"
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right">
                        <Button x:Name="Cancel" Content="Hủy" 
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Margin="10"/>
                        <Button x:Name="Save" Content="Lưu" 
                            Style="{StaticResource MaterialDesignRaisedAccentButton}"
                            Margin="10">
                            <Button.IsEnabled>
                                <MultiBinding UpdateSourceTrigger="PropertyChanged" Converter="{StaticResource HasErrorConverter}">
                                    <Binding Path="(Validation.HasError)" ElementName="txbClientName"/>
                                    <Binding Path="(Validation.HasError)" ElementName="cbbClientType"/>
                                    <Binding Path="(Validation.HasError)" ElementName="dpkClientBirthday"/>
                                    <Binding Path="(Validation.HasError)" ElementName="txbClientEmail"/>
                                    <Binding Path="(Validation.HasError)" ElementName="txbClientAddress"/>
                                </MultiBinding>
                            </Button.IsEnabled>
                        </Button>
                    </StackPanel>
                </Grid>
            </md:Card>
        </Grid>
    </md:DialogHost>
</Page>
